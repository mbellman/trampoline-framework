{
	"compilerOptions": {
		"baseUrl": "./source",
		"declaration": true,
		"downlevelIteration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2015"
		],
		"module": "commonjs",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": false,
		"outDir": "./dist",
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"target": "es5"
	},
	"include": [
		"source/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
